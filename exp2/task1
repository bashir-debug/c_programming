#include <stdio.h>

int main()
{
    int num;

    printf("\t\t\t ****Even odd Finder****\n\n\n");

    printf("enter the number:\n");
    scanf("%d", &num);

    if (num % 2 == 0)
    {
        printf("the entered number is even");
    }
    else
    {
        printf("the entered number is odd");
    }

    return 0;
}
/*    
    OUTPUT: 

                      ****Even odd Finder****


    enter the number:
    5   
    the entered number is odd
*/
